{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "windows":
            {
                "program": "${workspaceFolder}/out/bin/${workspaceRootFolderName}.exe",
                "miDebuggerPath": "gdb.exe"
            },
            "linux":
            {
                "program": "${workspaceFolder}/out/bin/${workspaceRootFolderName}",
                "miDebuggerPath": "gdb"
            },
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "preLaunchTask": "make",
            "setupCommands":
            [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing"
                }
            ]
        }
    ]
}